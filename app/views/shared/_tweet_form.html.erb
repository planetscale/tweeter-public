<div>
  <%= form_with model: current_user.tweets.new do |form| %>
    <div class="field">
      <%= form.text_area :content, placeholder: "What is happening?", rows: 4, class: "rounded border border-secondary-subtle bg-light mb-2" %>
    </div>
    <div class="d-flex align-items-center justify-content-between">
      <label>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="text-muted" viewBox="0 0 16 16">
          <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
          <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.505.505 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z"/>
        </svg>
        <span class="d-none">
          <%= form.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
        </span>
      </label>

      <%= form.submit "Tweet", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
