<li class="d-flex justify-content-between gap-3 border-top border-light-subtle mb-3 pt-4">
  <div class="d-flex justify-content-between gap-3">
    <%= link_to gravatar_for(tweet.user, size: 40), tweet.user %>
    <div class="d-flex flex-column gap-1">
      <div>
        <span>
          <%= link_to tweet.user.name, tweet.user, class: "text-dark fw-semibold" %>
          <%= link_to "@#{tweet.user.slug}", tweet.user, class: "text-muted" %>
        </span>
        <span class="mx-1">&middot;</span>
        <time class="text-muted fw-light">
          <%= time_ago_in_words(tweet.created_at) %> ago
        </time>
      </div>
      <div class="fw-light">
        <%= tweet.content %>
        <% if tweet.image.attached? %>
          <div class="tweet-img">
            <%= image_tag tweet.display_image, class: 'img-fluid rounded' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <% if current_user?(tweet.user) %>
      <%= link_to(tweet, method: :delete, data: { confirm: "Delete Tweet?" }, class: "text-muted") do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
          <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
        </svg>
      <% end %>
    <% end %>
  </div>
</li>
