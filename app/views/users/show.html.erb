<% provide(:title, @user.name) %>

<div>
  <section>
    <%= render 'shared/user_info' %>
  </section>
  <% if @user.tweets.any? %>
      <ol class="d-flex flex-column my-5 gap-3">
        <%= render @tweets %>
        <div class="my-4">
          <%= will_paginate @tweets, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        </div>
      </ol>
  <% else %>
    <p>No post yet</p>
  <% end %>
</div>
